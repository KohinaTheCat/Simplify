{
  "name": "Simplify",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Simplify",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content_script.js"] }
  ],
  "content_security_policy": "script-src 'self' 'sha256-PIyb3PnRPKdQ/zZ3eNZVMh2iKFwxlu1BZA4FGs7FPpw='"
}
